#include "mlx/mlx.h"
#include <unistd.h>

int	deal_key(int key_nb, void *param)
{
	write(1, 'X', 1);
}

int	main(void)
{
	void	*mlx_ptr;
	void	*win_ptr;

	mlx_ptr = mlx_init();
	win_ptr = mlx_new_window(mlx_ptr, 500, 500, "Fallout 4");
	mlx_pixel_put(mlx_ptr, win_ptr, 250, 250, 0xFFAB23);
	mlx_key_hook(mlx_ptr, deal_key, (void *)0);
	mlx_loop(mlx_ptr);
	return (0);	
}
